<%- include ("partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="card">
                <h2> 修改子账号 </h2>
                

                <form action="/<%=data.belongto%>/<%=data._id%>/update?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="parentNumber"> 母账号 </label>
                        <input type="text" name="info[belongto]" id="parentNumber" value="<%= data.belongto%>" disabled>
                    </div>
                    <div class="form-group">
                        <label for="kidsNumber"> 子号码 </label>
                        <input type="text" id="kidsNumber" name="info[phonenumber]" value="<%= data.phonenumber%>">
                    </div>
                    <div class="form-group">
                        <button class="btn-primary" type="submit"> 确认修改 </button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>



<%- include ("partials/footer") %>